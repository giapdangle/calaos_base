                                rel1 { relative: 1.0  0.5; offset: -6-30-3-22 -8; }
                                rel2 { relative: 1.0  0.5; offset: -6-30-4     7; }
                                image.normal: "icon_clock.png";
                                color: 255 255 255 0;
